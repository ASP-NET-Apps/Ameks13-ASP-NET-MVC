@model IEnumerable<MyWoodenHouse.Client.Web.Areas.Administration.ViewModels.Categories.AdminCategoryMainViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/jqueryval")*@

    <div class="container">
        <div class="raw" style="margin-top: 20px;">
            <div class="col-md-2 table-bordered-no">
                <a href="@Url.Action("Index", "Home", new { area = "Administration" })" class="btn btn-primary">
                    <span class="glyphicon glyphicon-backward" aria-hidden="true"></span>
                    Admin
                </a>
            </div>
            <div class="col-md-6 table-bordered-no">
                <h2 class="red-fg">Manage categories</h2>
            </div>
        </div>
        <div class="raw">
            <div class="col-md-8 table-bordered-no">
                
                <table class="table table-striped" style="margin-top:20px;">
                    <colgroup>
                        <col class="col-md-8">
                        <col class="col-md-4">
                    </colgroup>
                    <tbody>
                        <tr>
                            <th style="background-color:lightsteelblue; color: white;">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th style="background-color:lightsteelblue;"></th>
                        </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>                                
                                <a href="@Url.Action("Edit", "AdminCategories", new { id = item.Id })" class="btn btn-warning">
                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                    Edit
                                </a>
                                <a href="@Url.Action("ViewDeleteConfirm", "AdminCategories", new { id = item.Id })" class="btn btn-danger modal-link">
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    Delete
                                </a>


                            </td>
                        </tr>
                    }
                        <tr>
                            <td  style="background-color:lightsteelblue"></td>
                            <td  style="background-color:lightsteelblue">
                                <a href="@Url.Action("Create", "AdminCategories")" class="btn btn-primary pull-right">
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    Create New
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>


</body>
</html>
