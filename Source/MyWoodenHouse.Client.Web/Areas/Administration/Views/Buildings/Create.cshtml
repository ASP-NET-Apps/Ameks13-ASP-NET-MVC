@model MyWoodenHouse.Client.Web.Areas.Administration.ViewModels.Buildings.BuildingCreateEditViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
  
    <div class="container">
        <div class="row" style="margin-top: 20px;">
            <div class="col-md-2">
                <a href="@Url.Action("Index", "Buildings", null)" class="btn btn-default">
                    <span class="glyphicon glyphicon-backward" aria-hidden="true"></span>
                    Buildings
                </a>
            </div>
            <div class="col-md-6">
                <h2 class="red-fg">Add building</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">

        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "createForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <table class="table form-horizontal" style="margin-top:20px;">
                    <colgroup>
                        <col class="col-md-3">
                        <col class="col-md-9">
                    </colgroup>
                    <tbody class="form-group">
                        <tr>
                            <th style="background-color:lightsteelblue; color: white;">
                                @Html.DisplayNameFor(model => model.ModelName)
                            </th>
                            <th style="background-color:lightsteelblue;"></th>
                        </tr>

                        @*********************@
                        @* Name
                        *@
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.BuildingCompleteViewModel.Name, htmlAttributes: new { @class = "control-label pull-right" })
                            </td>
                            <td>
                                @Html.ValidationMessageFor(model => model.BuildingCompleteViewModel.Name, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.BuildingCompleteViewModel.Name, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        @*********************@
                        @* Description
                        *@
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.BuildingCompleteViewModel.Description, htmlAttributes: new { @class = "control-label pull-right" })
                            </td>
                            <td>
                                @Html.ValidationMessageFor(model => model.BuildingCompleteViewModel.Description, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.BuildingCompleteViewModel.Description, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>

                        @*********************@
                        @* UsableArea
                        *@
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.BuildingCompleteViewModel.UsableArea, htmlAttributes: new { @class = "control-label pull-right" })
                            </td>
                            <td>
                                @Html.ValidationMessageFor(model => model.BuildingCompleteViewModel.UsableArea, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.BuildingCompleteViewModel.UsableArea, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        @*********************@
                        @* BuiltUpArea
                        *@
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.BuildingCompleteViewModel.BuiltUpArea, htmlAttributes: new { @class = "control-label pull-right" })
                            </td>
                            <td>
                                @Html.ValidationMessageFor(model => model.BuildingCompleteViewModel.BuiltUpArea, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.BuildingCompleteViewModel.BuiltUpArea, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        @*********************@
                        @* RoomsCount
                        *@
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.BuildingCompleteViewModel.RoomsCount, htmlAttributes: new { @class = "control-label pull-right" })
                            </td>
                            <td>
                                @Html.ValidationMessageFor(model => model.BuildingCompleteViewModel.RoomsCount, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.BuildingCompleteViewModel.RoomsCount, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        @*********************@
                        @* FloorsCount
                        *@
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.BuildingCompleteViewModel.FloorsCount, htmlAttributes: new { @class = "control-label pull-right" })
                            </td>
                            <td>
                                @Html.ValidationMessageFor(model => model.BuildingCompleteViewModel.FloorsCount, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.BuildingCompleteViewModel.FloorsCount, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        @*********************@
                        @* BathroomsCount
                        *@
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.BuildingCompleteViewModel.BathroomsCount, htmlAttributes: new { @class = "control-label pull-right" })
                            </td>
                            <td>
                                @Html.ValidationMessageFor(model => model.BuildingCompleteViewModel.BathroomsCount, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.BuildingCompleteViewModel.BathroomsCount, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        
                        @*********************@
                        @* CategoryList
                        *@
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.BuildingCompleteViewModel.Category, htmlAttributes: new { @class = "control-label pull-right" })
                            </td>
                            <td>
                                @Html.ValidationMessageFor(model => model.BuildingCompleteViewModel.Category, "", new { @class = "text-danger" })
                                @Html.DropDownListFor(model=> model.BuildingCompleteViewModel.Category, Model.CategoryList, new { @class = "form-control" })
                            </td>
                        </tr>
                        @*********************@
                        @* ProductList
                        *@
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.BuildingCompleteViewModel.Product, htmlAttributes: new { @class = "control-label pull-right" })
                            </td>
                            <td>
                                @Html.ValidationMessageFor(model => model.BuildingCompleteViewModel.Product, "", new { @class = "text-danger" })
                                @Html.DropDownListFor(model => model.BuildingCompleteViewModel.Product, Model.ProductList, new { @class = "form-control" })
                            </td>
                        </tr>

                        <tr>
                            <td style="background-color:lightsteelblue"></td>
                            <td style="background-color:lightsteelblue">
                                <button type="reset"
                                        id="resetButton"
                                        onclick="location.href='@Url.Action("Index","Buildings")'"
                                        class="btn btn-default">
                                    <span class="glyphicon glyphicon-remove"></span>
                                    Cancel
                                </button>
                                <button type="submit"
                                        id="saveButton"
                                        value="Create"
                                        onclick="location.href='@Url.Action("Create","Buildings")'"
                                        class="btn btn-default disabled">
                                    <span class="glyphicon glyphicon-floppy-save"></span>
                                    Save
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
        }
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/jqueryval")*@

    <script type="text/javascript">

        function enableSaveButton(){
            var saveButton = $('#saveButton');

            saveButton.removeClass('disabled');
            saveButton.removeClass('btn-default');
            saveButton.addClass('enabled');
            saveButton.addClass('btn-primary');
        }

        function disableSaveButton(){
            var saveButton = $('#saveButton');
            saveButton.removeClass('enabled')
            saveButton.removeClass('btn-primary')
            saveButton.addClass('disabled');
            saveButton.addClass('btn-default');
        }

        function validateForm() {
            var createForm = $('#createForm');
            var validator = createForm.validate();
            validator.form();

            if (createForm.valid()) {
                console.log(createForm.valid());
                enableSaveButton();
            } else {
                console.log(createForm.valid());
                disableSaveButton();
            }
        }

        $(document).ready(function () {
            $('#Name').on("input", function () {
                validateForm();
            });
            $('#Description').on("input", function () {
                validateForm();
            });

            $('#UsableArea').on("input", function () {
                validateForm();
            });
            $('#BuiltUpArea').on("input", function () {
                validateForm();
            });
            $('#RoomsCount').on("input", function () {
                validateForm();
            });
            $('#FloorsCount').on("input", function () {
                validateForm();
            });
            $('#BathroomsCount').on("input", function () {
                validateForm();
            });
        });

    </script>
</body>
</html>
